<Page
    x:Class="GravityHeroUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GravityHeroUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#5C2D91">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Foreground="White" Text="Gravity Hero" 
                       FontSize="40" HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>
            <TextBlock x:Name="heroText" Foreground="White" Text="Intensity: 0G" 
                       FontSize="32" FontWeight="Light" HorizontalAlignment="Center" />
        </StackPanel>
        
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="countText" Foreground="White" Text="3" 
                       FontSize="120" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
            
            <TextBlock x:Name="togoText" Foreground="White" 
                       Text="jumps to go: 10" FontSize="32" 
                       FontWeight="Light" 
                       HorizontalAlignment="Center" />
        </StackPanel>
        <Button Foreground="White" FontSize="40" 
                x:Name="start" Click="start_Click" VerticalAlignment="Bottom" 
                HorizontalAlignment="Stretch" 
                FontFamily="Global User Interface">START</Button>
        
        <MediaElement x:Name="media" 
                      Visibility="Collapsed"/>
    </Grid>
</Page>
